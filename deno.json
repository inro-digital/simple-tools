{
  "name": "@inro/simple-tools",
  "version": "0.0.12",
  "exports": {
    "./calculator": "./packages/calculator/mod.ts",
    "./countdown": "./packages/timers/countdown.ts",
    "./state": "./packages/utils/state.ts",
    "./stopwatch": "./packages/timers/stopwatch.ts",
    "./todolist": "./packages/todolist/mod.ts"
  },
  "fmt": {
    "proseWrap": "preserve",
    "semiColons": false,
    "singleQuote": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/testing": "jsr:@std/testing@^1.0.11"
  },
  "publish": {
    "exclude": ["examples"]
  },
  "tasks": {
    "dev": "serve ./examples/www",
    "test": "deno fmt && deno lint && deno check . && deno task test:coverage && deno publish --dry-run --allow-dirty",
    "test:coverage": "deno test --coverage=./coverage --reporter=dot ."
  }
}
